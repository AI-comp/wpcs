<h1>Listing problems</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Scores</th>
    <th>Inputs</th>
    <th>Wrong Counts</th>
    <th>Solved Times</th>
    <th></th>
    <% if @current_user && @current_user.is_admin %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @problems.asc(:title).each do |problem| %>
  <tr>
    <td><%= link_to(problem.title, problem.content_path, target: '_blank') %></td>
    <td>
      Small: <%= problem.small_score %>
      <br />
      Large: <%= problem.small_score %>
    </td>
    <td>
      <%= link_to('Small', download_small_contest_problem_path(@contest, problem)) %>
      <br />
      <%= link_to('Large', download_large_contest_problem_path(@contest, problem)) %>
    </td>
    <td>
      Small: <%= @current_user.wrong_count(problem, 'small') %>
      <br />
      Large: <%= @current_user.wrong_count(problem, 'large') %>
    </td>
    <td>
      Small: <%= @current_user.solved_time(problem, 'small') || 'Not yet' %>
      <br />
      Large: <%= @current_user.solved_time(problem, 'large') || 'Not yet' %>
    </td>
    <td><%= link_to 'Submit', contest_problem_path(@contest, problem) %></td>
    <% if @current_user && @current_user.is_admin %>
      <td><%= link_to 'Edit', edit_contest_problem_path(@contest, problem) %></td>
      <td><%= link_to 'Destroy', contest_problem_path(@contest, problem), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if @current_user && @current_user.is_admin %>
  <%= link_to 'New Problem', new_contest_problem_path %>
<% end %>
