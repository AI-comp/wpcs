<h1>Problem list</h1>

<p>
<%= link_to 'Score board', contest_score_path %>
</p>

<table class='table table-striped'>
  <tr>
    <th>Problem name</th>
    <th>Input sizes</th>
    <th>Scores</th>
    <th>Download inputs</th>
    <th>Solved time</th>
    <th></th>
    <% if @current_user && @current_user.is_admin %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @problems.asc(:title).each do |problem| %>
  <tr>
    <td><%= link_to problem.title, contest_problem_path(problem.contest, problem) %></td>
    <td>Small<br>Large</td>
    <td>
      <div><%= problem.small_score %></div>
      <div><%= problem.large_score %></div>
    </td>
    <td>
      <div>
      <%= link_to('Download Small', download_small_contest_problem_path(@contest, problem)) %>
      </div>
      <div>
      <%= link_to('Download Large', download_large_contest_problem_path(@contest, problem)) %>
      </div>
    </td>
    <td>
      <div>
        <% submit = @current_user.submit_for(problem, 'small') %>
        <%= submit ? format_date(submit.solved_time) : 'Not yet' %>
      </div>
      <div>
        <% submit = @current_user.submit_for(problem, 'large') %>
        <%= submit ? format_date(submit.solved_time) : 'Not yet' %>
      </div>
    </td>
    <td>
      <div>
      <%= link_to 'Submit Small', contest_problem_path(@contest, problem, input_type: 'small') %>
      </div>
      <div>
      <%= link_to 'Submit Large', contest_problem_path(@contest, problem, input_type: 'large') %>
      </div>
    </td>
    <% if @current_user && @current_user.is_admin %>
      <td><%= link_to 'Edit', edit_contest_problem_path(@contest, problem) %></td>
      <td><%= link_to 'Destroy', contest_problem_path(@contest, problem), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<% if @current_user && @current_user.is_admin %>
  <%= link_to 'New Problem', new_contest_problem_path %>
<% end %>
