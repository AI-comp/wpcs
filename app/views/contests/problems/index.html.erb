<h1>Problem list</h1>

<%= render "timer" %>

<p>
<%= link_to 'Score board', contest_score_path %>
</p>

<table class='table table-striped'>
  <tr>
    <th>Problem name</th>
    <th>Input sizes</th>
    <th>Scores</th>
    <th>Solved time</th>
    <th></th>
    <% if @current_user && @current_user.is_admin %>
      <th></th>
    <% end %>
  </tr>

<% @problems.asc(:title).each do |problem| %>
  <tr>
    <td><%= link_to problem.title, contest_problem_path(problem.contest, problem) %></td>
    <td>Small<br>Large</td>
    <td>
      <div><%= problem.small_score %></div>
      <div><%= problem.large_score %></div>
    </td>
    <td>
      <div>
        <%= @score.solved_time(problem, 'small') ?
          format_date(@score.solved_time(problem, 'small')) :
          'Not yet (' + @score.wrong_count(problem, 'small').to_s + ' failures)' %>
      </div>
      <div>
        <%= @score.solved_time(problem, 'large') ?
          format_date(@score.solved_time(problem, 'large')) :
          'Not yet (' + @score.wrong_count(problem, 'large').to_s + ' failures)' %>
      </div>
    </td>
    <% if @current_user && @current_user.is_admin %>
      <td><%= link_to 'Edit', edit_contest_problem_path(@contest, problem) %></td>
      <td><%= link_to 'Destroy', contest_problem_path(@contest, problem), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<% if @current_user && @current_user.is_admin %>
<%= link_to 'New Problem', new_contest_problem_path %>
<% end %>
<br>
<div id="resultLog">
  <% Submit.desc("update_at").reverse.take(10).each do |m| %>
    <%= "%s(group: %s) submitted for %s(%s), and result was %s at %s "%([m.score.user.name, m.score.user.group.name ,m.problem.title, m.problem_type, m.solved, m.updated_at.strftime('%H:%M:%S'), m.solved]) %>
  <br>
  <% end %>
</div>