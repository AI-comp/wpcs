<h1>Problem List</h1>

<%= render "timer" %>

<%= flash[:solved].try { |b|
  content_tag(:div, class: 'alert'){ b ? 'Correct!' : 'Wrong...' }
} %>

<p>
<%= link_to 'Scoreboard', contest_score_path %>
</p>

<table class='table table-striped'>
  <tr>
    <th>Problem Name</th>
    <th>Input Size</th>
    <th>Score</th>
    <th>Solved Time</th>
  </tr>

<% @problems.asc(:title).each do |problem| %>
  <tr>
    <td><%= link_to problem.title, contest_problem_path(problem.contest, problem) %></td>
    <td>Small<br>Large</td>
    <td>
      <div><%= problem.small_score %></div>
      <div><%= problem.large_score %></div>
    </td>
    <td>
<% [:small, :large].each do |type| %>
      <div>
        <% submission = @current_user.solved_submission_for(problem, type) %>
        <%= submission ? format_date(submission.created_at) : 'Not Yet' %>
      </div>
<% end %>
    </td>
  </tr>
<% end %>
</table>

<br>
<br>

<h2>Submission History</h2>
<div id="resultLog">
  <table class='table table-striped'>
    <tr>
      <th>User</th>
      <th>Group</th>
      <th>Problem</th>
      <th>Result</th>
      <th>Score</th>
      <th>Submission Time</th>
    </tr>
    <% Submission.in(attendance: @contest.attendance_ids).desc(:updated_at).take(10).each do |s| %>
    <tr>
      <td><%= "#{s.attendance.user.name}" %></td>
      <td><%= "#{s.attendance.user.group.name}" %></td>
      <td><%= "#{s.problem.title} (#{s.problem_type.capitalize})" %></td>
      <td><%= "#{s.solved ? "Correct" : "Wrong"}" %></td>
      <td>
        <a href="#" rel="tooltip" data-toggle="tooltip" data-placement="top" title="Acquired Score">
          <%= s.score %>
        </a>
        /
        <a href="#" rel="tooltip" data-toggle="tooltip" data-placement="top" title="Maximum Score">
          <%= s.problem_type == :small ? s.problem.small_score : s.problem.large_score %>
        </a>
      </td>
      <td><%= "#{s.updated_at.strftime('%H:%M:%S')}" %></td>
    </tr>
  <br>
  <% end %>
  </table>
</div>
