<h1>問題一覧</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Scores</th>
    <th>Inputs</th>
    <th>Wrong Counts</th>
    <th>Solved Times</th>
    <th></th>
    <% if @current_user && @current_user.is_admin %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @problems.asc(:title).each do |problem| %>
  <tr>
    <td><%= link_to(problem.title, problem.content_path, target: '_blank') %></td>
    <td>
      Small: <%= problem.small_score %>
      <br />
      Large: <%= problem.large_score %>
    </td>
    <td>
      <%= link_to('Download Small', download_small_contest_problem_path(@contest, problem)) %>
      <br />
      <%= link_to('Download Large', download_large_contest_problem_path(@contest, problem)) %>
    </td>
    <td>
      Small: <%= @score.wrong_count(problem, 'small') %>
      <br />
      Large: <%= @score.wrong_count(problem, 'large') %>
    </td>
    <td>
      Small: <%= @score.solved_time(problem, 'small') || 'Not yet' %>
      <br />
      Large: <%= @score.solved_time(problem, 'large') || 'Not yet' %>
    </td>
    <td><%= link_to 'Submit', contest_problem_path(@contest, problem) %></td>
    <% if @current_user && @current_user.is_admin %>
      <td><%= link_to 'Edit', edit_contest_problem_path(@contest, problem) %></td>
      <td><%= link_to 'Destroy', contest_problem_path(@contest, problem), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if @current_user && @current_user.is_admin %>
  <%= link_to 'New Problem', new_contest_problem_path %>
<% end %>

<h1>ランキング（F5で更新してください）</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Score</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.scores.where(contest_id: @contest.id).first.score %></td>
  </tr>
<% end %>
</table>
