<script type="text/javascript">
  $(function() {
    var end_time = new Date("<%= @contest.end_time.to_s %>");
    var target   = $("#sec");
    function update() {
      var diff = (end_time - new Date())/ 1000;
      var hour = ("00" + String(Math.floor(diff / 3600))).substr(-2);
      var min  = ("00" + String(Math.floor(diff % 3600 / 60))).substr(-2);
      var sec  = ("00" + String(Math.floor(diff % 3600) % 60)).substr(-2);
      var time = hour + ":" + min + ":" + sec;
      target.html(time);
    }
    update();
    setInterval(update, 500);
  });
</script>
