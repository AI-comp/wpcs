<h1>Scoreboard</h1>

<p>
Please update by pressing your F5 key.
</p>

<p>
<table class='table table-striped'>
  <tr>
    <th>Place</th>
    <th>Team name</th>
    <th>Score</th>
<% @contest.problems.each do |problem| %>
    <th>
      <%= problem.title %>
<% [:small, :large].each do |type| %>
      <br>
      <a href="#" rel="tooltip" data-toggle="tooltip" data-placement="top" title="Maximum Score for <%= type.to_s.capitalize %>">
        <%= type == :small ? problem.small_score : problem.large_score %>
      </a>
<% end %>
    </th>
<% end %>
  </tr>

<% groups_to_show.each_with_index do |group, index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= group.name %></td>
    <td><%= group.score_for(@contest) %></td>
<% @contest.problems.each do |problem| %>
    <td>
      <% delimiter = '' %>
      <% attendances = group.attendances_for(@contest) %>
<% [:small, :large].each do |type| %>
      <% s = group.solved_submission_for(attendances, problem, type) %>
      <a href="#" rel="tooltip" data-toggle="tooltip" data-placement="top" title="Score Acquired for <%= type.to_s.capitalize %>">
      <% if s %>
          <%= s.score %>
          <span style='color: #7d7d7d; font-size: 80%;'>(<%= format_date(s.created_at) %>)</span>
      <% else %>
        -
      <% end %>
      </a>
      <br>
<% end %>
    </td>
<% end %>
  </tr>
<% end %>
</table>
</p>
